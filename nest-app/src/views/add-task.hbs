<form action="/add-task" method="post" enctype="multipart/form-data">
    <div class="form-group row mb-2">
        <label for="name" class="form-label col-2 col-form-label">Task Name:</label>
        <div class="col-10">
            <input type="text" class="form-control" id="name" name="name"
                   autocomplete="off">
        </div>
    </div>
    <div class="form-group row mb-2">
        <label for="status" class="form-label col-2 col-form-label">Status:</label>
        <div class="col-10">
            <select class="form-select" id="status" name="status">
                {{#each statuses}}
                    <option value="{{this}}">
                        {{status-name this}}
                    </option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label for="date" class="form-label col-2 col-form-label">End Date:</label>
        <div class="col-10">
            <input type="date" class="form-control" id="date" name="date">
        </div>
    </div>
    <div class="form-group row mb-2">
        <label for="attachments" class="form-label col-2 col-form-label">Attachments:</label>
        <div class="col-10">
            <input type="file" class="form-control" id="attachments" name="attachments" multiple>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary col-12">Add Task</button>
    </div>
</form>
</div>
